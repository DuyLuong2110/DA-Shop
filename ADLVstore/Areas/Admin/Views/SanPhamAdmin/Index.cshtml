@model PagedList.IPagedList<ShopOnlineConnection.SanPham>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}



<style>
    table {
        border-collapse: collapse;
        width: 100%;
        margin: auto;
    }

    th, td {
        text-align: center;
        padding: 8px;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #5d5e63;
    }

    th {
        background-color: #FF9407;
        color: white;
    }
</style>


<h2> Quản Lý Sản Phẩm</h2>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
<table>
    <tr>
        <th>Mã Sản Phẩm</th>
        <th>Tên Sản Phẩm</th>
        <th>Tình Trạng</th>
        <th>Hình Ảnh</th>

        <th colspan="2">
            <a href="@Url.Action("Create","SanPhamAdmin")"><img src="~/Asset/images/AddNSX.png" style="margin-left: 20%;" /></a>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaSanPham</td>
            <td>@item.TenSanPham </td>
            <td>@item.TinhTrang </td>

            <td><img src="~/Asset/images/@item.HinhChinh" style="width:60px;height:60px;" /></td>
            <td><a href="@Url.Action("Edit","SanPhamAdmin",new { id= @item.MaSanPham })"> <img src="~/Asset/images/Edit.png" /></a></td>
            <td><a href="@Url.Action("Delete","SanPhamAdmin",new { id= @item.MaSanPham })"> <img src="~/Asset/images/Delete.png" /></a></td>
        </tr>
    }


</table>

