
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}
<script src="~/Areas/AssetAdmin/js/product/previewfile.js"></script>
<h2>Thêm Sản Phẩm</h2>
<style>
    input[type=text] {
        width: 100%;
        height: 40px;
        background: black;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ff0000;
        border-radius: 4px;
        box-sizing: border-box;
    }
    input[type=number] {
        width: 100%;
        height: 40px;
        background: black;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ff0000;
        border-radius: 4px;
        box-sizing: border-box;
    }


    input[type=submit] {
        width: 100%;
        height: 40px;
        background-color: #2a9fd6;
        color: black;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #45a049;
        }
</style>


<div style="margin:auto;">
    @using (Html.BeginForm("Create", "SanPhamAdmin", FormMethod.Post, new { enctypy = "multipart/form-data" }))
    {

    <table style="width:80%;margin:auto; background: black">
        <tr>
            <td>Mã Sản Phẩm</td>
            <td><input style="width:300px;float:left;" maxlength="11" type="text" name="MaSanPham" /></td>
            <td rowspan="8">
                <div>
                    <img id="target" class="img" src="#" alt="your image" style="float:right; width:320px; height:300px;" />
                </div>
            </td>
        </tr>
        <tr>
            <td>Mã Loại Sản Phẩm</td>
            <td>@Html.DropDownList("MaLoaiSanPham", null, new { @style = "float:left; width: 300px; background:black;height:30px;" })</td>
            

        </tr>
        <tr>
            <td> Tên Sản Phẩm</td>
            <td><input style="width:300px;float:left;" type="text" name="tensanpham" maxlength="100" /></td>
        </tr>
        <tr>
            <td>Hình Chính</td>
            <td><input type="File" class="img" name="HinhChinh" onchange="previewFile();" style="float:left"></td>
        </tr>
        <tr>
            <td>Hình nhỏ 1</td>
            <td><input type="File" id="file_Hinh1" name="Hinh1" style="float:left" /></td>
        </tr>
        <tr>
            <td>Hình nhỏ 2</td>
            <td><input type="File" id="file_Hinh2" name="Hinh2" style="float:left" /></td>
        </tr>
        <tr>
            <td>Hình nhỏ 3</td>
            <td><input type="File" id="file_Hinh3" name="Hinh3" style="float:left" /></td>
        </tr>
        <tr>
            <td>Hình nhỏ 4</td>
            <td><input type="File" id="file_Hinh4" name="Hinh4" style="float:left" /></td>
        </tr>
        <tr>
            <td>Giá</td>
            <td> <input style="width:300px; float:left;" type="number" name="Gia" /></td>
        </tr>

        <tr>
            <td>Ghi chú</td>
            <td><input style="width:300px; float:left;" type="text" name="GhiChu" /></td>
        </tr>

       <tr>
            <td>Số Lượng Sản Phẩm</td>
            <td> <input style="width:300px; float:left;" type="number" name="SoLuongSanPham" /></td>
        </tr>
        
        <tr>
            <td>Tình Trạng</td>
            <td>
                <select name="TinhTrang" style="float:left;width:300px;background-color:#5d5e63;">
                    <option value="0">củ</option>
                    <option value="1">mới</option>

                </select>
            </td>
        </tr>
        <tr>
            <td> Nhà Sản Xuất</td>

            <td>
                @Html.DropDownList("MaNhaSanXuat", null, new { @style = "float: left ; width: 300px; background: black;  height: 20px; " });
            </td>
        </tr>
        <tr>

    <td style="width: 300px;">Cấu Hình</td>
    <td colspan="2"><textarea class="ckeditor" name="CauHinh" style="width: 300px; height: 150px; max-width: 100px; max-height: 600px; background:white;" rows="4" cols="30"></textarea></td>
</tr>
        <td colspan="3">
            <input style="height:40px; width:300px; margin-left:32%;
            background:#016ABC;color:#fff; border:1px solid #eee; border-radius:20px;box-shadow: 5px 5px 5px #eee;"
                   type="submit" name="btn_ThemSanPham" value="Hoàn tất thêm Sản Phẩm" />

        </td>



    </table>
    }
</div>
