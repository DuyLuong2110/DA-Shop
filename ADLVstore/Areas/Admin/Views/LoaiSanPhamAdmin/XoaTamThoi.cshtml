@model ShopOnlineConnection.LoaiSanPham
@{
    ViewBag.Title = "XoaTamThoi";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<h2>XoaTamThoi</h2>

<style>
    input[type=text] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=submit] {
        width: 100%;
        background-color: #2a9fd6;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #45a049;
        }
</style>


<h3>Xóa Loại Sản Phẫm</h3>

<div style="margin:auto;">
    @using (Html.BeginForm("XoaTamThoi", "LoaiSanPHamAdmin", FormMethod.Post, new { @style = "width: 50%; margin:auto;" }))
    {
        <label for="fname">Mã Nhà Sãn Xuất</label>
        <input type="text" id="fname" name="MaLoaiSanPham" style="background-color:#5d5e63;" placeholder="Mã Nhà Sản Xuất VD: NSX01" required value="@Model.MaLoaiSanPham" readonly>

        <label for="lname">Tên Nhà Sản Xuất</label>
        <input type="text" id="lname" name="TenLoaiSanPham" style="background-color:#5d5e63;" placeholder="Tên Nhà Sãn Xuất" required value="@Model.TenLoaiSanPham" readonly>

        <label for="country">Tính Trạng</label>
        <select id="country" style="width:20%;background-color:#5d5e63;" name="TinhTrang" required>

            @if (@Model.TinhTrang == "1")
            {

                <option value="1" selected>mới</option>
            }
            else
            {
                <option value="0" selected>củ</option>

            }



        </select>

        <input type="submit" value="Xóa Loại Sản Phẫm">

    }
</div>