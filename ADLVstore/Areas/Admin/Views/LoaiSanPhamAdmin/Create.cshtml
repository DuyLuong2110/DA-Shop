
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<style>
    input[type=text] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=submit] {
        width: 100%;
        background-color: #2a9fd6;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #45a049;
        }
</style>


<h3>Thêm Loại Sản Phẩm</h3>

<div style="margin:auto;">
    @using (Html.BeginForm("Create", "LoaiSanPhamAdmin", FormMethod.Post, new { @style = "width: 50%; margin:auto;" }))
    {


        <label for="fname">Mã Loại Sản Phẩm</label>
        <input type="text" id="fname" name="MaLoaiSanPham" style="background-color:#5d5e63;" placeholder="Mã Loại Sản Phẩm...." required>

        <label for="lname">Tên Loại Sản Phẩm</label>
        <input type="text" id="lname" name="TenLoaiSanPham" style="background-color:#5d5e63;" placeholder="Tên Loại Sản Phẩm...." required>
        <label for="lname">Cấu Hình</label>
        <td colspan="2"><textarea class="ckeditor" id="lname" name="CauHinh" style="width: 300px; height: 150px; max-width: 100px; max-height: 600px; background:white;" rows="4" cols="30"></textarea></td>
        <label for="country">Tính Trạng</label>
        <select id="country" style="width:20%;background-color:#5d5e63;" name="TinhTrang" required>
            <option value="0">củ</option>
            <option value="1">mới</option>


        </select>

        <input type="submit" value="Thêm Loại Sản Phẩm">

    }
</div>